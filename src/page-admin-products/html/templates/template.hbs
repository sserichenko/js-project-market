{{#each this}}
  <li class="one-product-item" data-id='{{_id}}'>
    <span class="popular-product popular-{{popular}}"></span>
    <img src='http://localhost:3000{{image}}' alt='{{type}} {{gender}} {{name}}' class="one-product-image">
    <p class="one-product-fullname">{{brandName}} {{name}}</p>
    <p class="one-product-size">Размер: {{size}}</p>
    <span class="one-product-id">ID: {{_id}}</span>
    <div class="hoover-change-product">
      <div class="change-product-button" id='{{_id}}'>
        <button class="manage-btn" id="deleteBtn">DEL</button>
        <button class="manage-btn" id="editBtn">EDITE</button>
      </div>
    </div>
  </li>
{{/each}}